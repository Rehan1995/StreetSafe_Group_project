<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_creat_account"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/asd"
    tools:context="com.example.rehans.streetsafe.Creat_account">



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:layout_width="220dp"
            android:layout_height="50dp"
            android:text="Creat profile"
            android:textSize="35dp"
            android:layout_gravity="center"
            android:textColor="#0D47A1"
            android:typeface="serif"/>

        <TextView
            android:layout_width="207dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="    Step 1 >>"
            android:textSize="20dp"
            android:textColor="#EF5350"
             />


    <TextView
        android:text="First Name :"
        android:textSize="20dp"
        android:textColor="#000000"
        android:layout_marginTop="17dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textViewfname" />

    <EditText
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"/>
        <TextView
            android:text="Last Name :"
            android:textSize="20dp"
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewlname" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
        <TextView
            android:text="Date of Birthday :"
            android:textSize="20dp"
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewdob" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
        <TextView
            android:text="Email:"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewemai" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <TextView
            android:text="Blood Group :"
            android:textSize="20dp"
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewalgies" />


        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>
              <TextView
            android:text="Allergies:"
            android:textSize="20dp"
            android:textColor="#000000"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewalagies" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"/>

        <TextView
            android:layout_width="207dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="    Step 2 >>"
            android:textSize="20dp"
            android:textColor="#EF5350"></TextView>



        <TextView
            android:text="Enter any trusted person 'Name' and 'Phone number'"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewphone" />

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="name"
            android:inputType="textPersonName"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="number"
            android:inputType="number"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="name"
            android:inputType="textPersonName"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="number"
            android:inputType="number"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:hint="name"
            android:inputType="textPersonName"/>

        <EditText
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:hint="number"
            android:inputType="number"/>

        <TextView
            android:layout_width="207dp"
            android:layout_height="30dp"
            android:layout_marginTop="15dp"
            android:text="    Step 3 >>"
            android:textSize="20dp"
            android:textColor="#EF5350"
            />

        <TextView
            android:text="would you like to Inform Public sectors"
            android:textSize="20dp"
            android:textColor="#000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textViewPublic" />

        <CheckBox
            android:text="Hospital"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox1"


           />
        <CheckBox
            android:text="Police"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/checkBox2"
        />
        <Button
            android:layout_width="150dp"
            android:layout_height="45dp"
            android:text="Sign Up"
            android:background="#00B8D4"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:id="@+id/button" />

            />

    </LinearLayout>

</ScrollView>



</RelativeLayout>
